<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="#eef0ef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_jenis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="12dp"
            android:layout_weight="3.5"
            android:src="@drawable/perjalanan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pemeriksaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_12sdp"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:text="Pemeriksaan SPM"/>
            <TextView
                android:id="@+id/tv_nama_stasiun_perjalanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="Nama Stasiun"/>
            <TextView
                android:id="@+id/tv_nama_pemeriksa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="Pemeriksa : Muhammad Iqbal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_4sdp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="15/04/2024"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="3.5"
                android:src="@drawable/trash"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>